.modal-header
  h3 New Campaign
.modal-body.modal-two-col

  form.form(name='form', ng-submit='ok(form)', novalidate='')
    .col-md-12
      .form-group(ng-class='{ "has-success": form.url.$valid && submitted,\
        "has-error": form.url.$invalid && submitted }')
        label Paste the URL here
          span.required *
        input.form-control(type='text', name='url', placeholder='http://...', ng-model='link.url', required='')
        p.help-block(ng-show='form.url.$error.required && submitted')
          | A URL is required
        div(flash-message='5000')

    .clearfix
    .modal-footer
      button.btn.btn-primary.pull-right(type='submit') Done
      button.btn.btn-light.right-spacer.pull-right(type='button', ng-click='cancel()') Cancel
